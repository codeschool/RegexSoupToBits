= form_for @registration do |f|
  - if @registration.errors.any?
    #error_explanation
      %h2= "#{pluralize(@registration.errors.count, "error")} prohibited this registration from being saved:"
      %ul
        - @registration.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
    = f.label '(Client)'
  .field
    = f.label :email
    = f.text_field :email
    = f.label '(Server)'
  .field
    = f.label :comment
    = f.label '(Database)'
    %hr
    = f.text_area :comment,  style: 'width:100%'
  .actions
    = f.submit 'Save'

