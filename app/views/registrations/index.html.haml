%h1 Listing registrations

.mbm
  = link_to 'New Registration', new_registration_path, class: 'btn btn-primary'
  = link_to 'View Companies', companies_path, class: 'btn btn-primary'

%table.table
  %thead
    %tr
      %th Name
      %th Email
      %th Comment
      %th Actions

  %tbody
    - @registrations.each do |registration|
      %tr
        %td= registration.name
        %td= registration.email
        %td= registration.comment
        %td
          = link_to 'Show', registration, class: 'btn btn-info'
          = link_to 'Validate', edit_registration_path(registration), class: 'btn btn-info'
          = link_to 'Destroy', registration, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-warning'

%br

:javascript
  $('#table').DataTable() 
